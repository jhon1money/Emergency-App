<EmergencyApp>:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'vertical'
        size_hint_y: None
        height: 200
        TextInput:
            id: title_input
            hint_text: "Título"
        TextInput:
            id: description_input
            hint_text: "Descripción"
        Button:
            text: "Seleccionar Foto"
            on_press: root.open_file_chooser()
        Button:
            text: "Registrar Evento"
            on_press: root.save_event()
    ScrollView:
        GridLayout:
            id: events_list
            cols: 1
            size_hint_y: None
            height: self.minimum_height
